<?xml version="1.0" encoding="UTF-8"?>
 <odoo>

        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="partner_instructor_form_view">
            <field name="name">partner.former</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Sessions">
                        <group>
                            <field name="former"/>
                            <field name="session_ids"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>


         <record id="partner_instructor_search_view" model="ir.ui.view">
            <field name="name">partner.former</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">

                    <filter name="salesperson" position="before">

                     <filter name="filter_to_former" string="Former" 
                            domain="[('former', '!=',False)]" />
                     </filter>
            </field>
         </record>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>

            <field name = "context"> { "search_default_filter_to_former": 1} </field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first student</p>
            </field>
        </record>
        

       <!-- top level menu: no parent -->
        <menuitem id="main_openacademy_menu" name="IT4LIFE Academy"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute -->
        <menuitem id="openacademy_menu" name="IT4LIFE Academy"
                  parent="main_openacademy_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <menuitem id="contact_menu" name="Contacts" parent="openacademy_menu"
                  action="contact_list_action"/>
        <!-- Full id location:
             action="openacademy.course_list_action"
             It is not required when it is the same module -->

</odoo>
